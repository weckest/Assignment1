@model Assignment1.Models.Article

<h2>Edit Article</h2>

<form asp-action="EditArticle" method="post">
    <input type="hidden" asp-for="ArticleId" />

    <label>Title:</label>
    <input asp-for="Title" class="form-control" required />

    <label>Body:</label>
    <textarea asp-for="Body" class="form-control" required></textarea>

    <label>Start Date:</label>
    <input type="date" asp-for="StartDate" class="form-control" required />

    <label>End Date:</label>
    <input type="date" asp-for="EndDate" class="form-control" required />

    <button type="submit" class="btn btn-primary">Update</button>
</form>

<a asp-action="Articles">Back to Articles</a>
